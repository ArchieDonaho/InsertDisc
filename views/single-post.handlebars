<form id="comment-form">
            <label for="content is-titillium-reg">Add a comment</label>
            <br />
            <textarea
              class="textarea music-post"
              id="comment-content"
              name="comment-content"
              placeholder="What's on your mind?"
            ></textarea>
          </div>
          <br />
          <button
            type="submit"
            class="button has-bg-blue is-contrail is-responsive has-text-white get-started"
          >Reply</button>
        </form>

<article class='post music-post column has-background-white m-3'>
  <div class='post-title'>
      <p class='is-inline is-titillium-reg is-small movies is-underlined'>
        {{post.title}}
      </p>
      <p class='is-inline is-titillium-reg has-text-grey is-xsmall'>
        &#160 @{{post.user.username}}
        {{format_date post.created_at}}
      </p>
    </a>
    <span></span>
  </div>

  <div class='post-content'>
    <p class='is-titillium-reg is-xsmall has-text-black'>
      {{post.content}}
    </p>
  </div>
    {{!update to use the pushed application's url name  }}
    {{! <a href=''>
      <img
        class='image is-24x24 is-inline'
        src='/assets/Twitter-logo.svg.png'
      />
    </a> }}
  </div>
</article>
  <div>
    {{#each post.comments as |comment|}}
      <ul>
        {{> comments comment}}
      </ul>
    {{/each}}
  </div>
  {{#if loggedIn}}
<script src="/javascript/add-comment.js"></script>
{{/if}}