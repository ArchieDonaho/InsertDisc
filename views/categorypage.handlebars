<section class="section is-medium p-3 has-bg-whitesmoke">
  <div class="columns is-centered">
    <div class="column is-10 mt-4">
      {{#if loggedIn}}
      <button
        class="button music-post-btn is-xsmall is-inline is-contrail js-modal-trigger-post"
        data-target="create-post-modal-post"
      >
        Create a post
      </button>
      {{/if}}

      {{#if music}}
      <p
        class="has-bg-blue is-titillium-bold is-medium is-inline has-text-black"
      >
        &#160 MUSIC &#160
      </p>
      {{/if}}

      {{#if movies}}
      <p
        class="has-bg-pink is-titillium-bold is-medium is-inline has-text-black"
      >
        &#160 MOVIES &#160
      </p>
      {{/if}}

      {{#if games}}
      <p
        class="has-bg-green is-titillium-bold is-medium is-inline has-text-black"
      >
        &#160 GAMES &#160
      </p>
      {{/if}}
    </div>
  </div>

  <div class="columns is centered">
    {{#each posts as |post|}}
      <ul>
        {{> post-info post}}
      </ul>
    {{/each}}
  </div>

</section>

<div class="modal" id="create-post-modal">
  <div class="modal-background">
    <div class="modal-card">
      <header {{#if music}} class="modal-card-head is-contrail is-small has-bg-blue"
      {{else if movies}}
      class="modal-card-head is-contrail is-small has-bg-pink"
      {{else if games}}
      class="modal-card-head is-contrail is-small has-bg-green"
      {{/if}}
      >
        <p class="modal-card-title has-text-white">
          Create a Post!
        </p>
      </header>
      <div class="modal-card-body">
        <form class="new-post-form">
          <div>
            <label for="title is-titillium-reg">Title</label>
            <br />
            <input type="text" id="title" name="title" 
            {{#if music}}
            class="music-post"
            {{else if movies}} class="movies-post"
            {{else if games}}
            class="games-post"
            {{/if}}
             />
          </div>
          <br />
          <div>
            <label for="content is-titillium-reg">Content</label>
            <br />
            <textarea
              {{#if music}}
              class="textarea music-post"
              {{else if movies}} class="textarea movies-post"
              {{else if games}}
              class="textarea games-post"
              {{/if}}
              id="content"
              name="content"
              placeholder="What's on your mind?"
            ></textarea>
          </div>
          <br />
          <button
            type="submit"
            {{#if music}}
            class="button has-bg-blue is-contrail is-responsive has-text-white get-started"
            {{else if movies}} class="button has-bg-pink is-contrail is-responsive has-text-white get-started"
            {{else if games}}
            class="button has-bg-green is-contrail is-responsive has-text-white get-started"
            {{/if}}
          >Create</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{#if loggedIn}}
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="/javascript/add-post.js"></script>
<script src="/javascript/like.js"></script>
{{/if}}