<section class="section is-medium main-section p-3 has-bg-whitesmoke">
  <div class="columns is-centered">
    <div class="column is-10 mt-4">
      <button
        class="button is-modal-trigger music-btn is-xsmall is-inline is-contrail"
        data-target="create-post-modal"
      >
        Create a post
      </button>

      <p
        class="has-bg-blue is-titillium-bold is-medium is-inline has-text-black"
      >
        &#160 MUSIC &#160
      </p>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-10">
      {{!-- {{posts}}     --}}

    </div>
  </div>

</section>

<div class="modal" id="create-post-modal">
  <div class="modal-background">
    <div class="modal-card">
      <header class="modal-card-head is-contrail is-small has-bg-blue">
        <p class="modal-card-title has-text-white">
          Create a Post!
        </p>
      </header>
      <div class="modal-card-body">
        <form class="new-post-form">
          <div>
            <label for="title is-titillium-reg">Title</label>
            <br />
            <input type="text" id="title" name="title" class="music-post" />
          </div>
          <br />
          <div>
            <label for="content is-titillium-reg">Content</label>
            <br />
            <textarea
              class="textarea music-post"
              id="content"
              name="content"
              placeholder="What's on your mind?"
            ></textarea>
          </div>
          <br />
          <button
            type="submit"
            class="button has-bg-blue is-contrail is-responsive has-text-white get-started"
          >Create</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascript/add-post.js"></script>