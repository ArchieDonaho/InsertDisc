<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="assets/images/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Contrail+One&family=Titillium+Web:wght@400;900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    {{!-- add if for title of page ex: Instert Disc - Dashboard --}}
    <title>Insert Disc</title>
  </head>

  <body>
    {{! add header }}
    <nav 
      {{#if dashboard }} 
      class='has-bg-lp navbar has-background-purple columns pl-5 pr-4 pt-4 ml-3' 
      {{else if music}} 
      class='has-bg-lb navbar has-background-blue columns pl-5 pr-4 pt-4 ml-3' 
      {{else if movies}} 
      class='has-bg-lpk navbar has-background-pink columns pl-5 pr-4 pt-4 ml-3' 
      {{else if games}} 
      class='has-bg-lg navbar has-background-green columns pl-5 pr-4 pt-4 ml-3' 
      {{else}}
      class='has-background-white navbar columns pl-5 pr-4 pt-4 is-mobile'
      {{/if}}
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand column is-1 p-0">
        <!-- include div with company name in Titillium Web Bold, font 15 dark grey and ptag with "music, movies, games" in contrailone, blue, font 8 that has an a tag -->
        <a
          href="/"
          class="navbar-item p-0 column not-underlined has-text-right"
        >
          <h1 class="is-titillium-bold is-size-6 is-size-5-fullhd has-text-grey is-hidden-mobile pt-4">
            Insert Disc
          </h1>
          <h1 class="is-titillium-reg has-text-grey is-hidden-tablet letter-i pb-3">
            &#160 I
          </h1>
          <p class="is-contrail has-text-blue is-size-7 is-hidden-touch">
            music, movies, games
          </p>
        </a>
      </div>
      

      <div class="is-flex">
        <img
          class="logo pt-3"
          src="/assets/images/InsertDiskLogo.png"
          alt="A picture of the Insert Disc logo: a disc that is half visible as it enters into an unseen reader"
        />
      </div>

      <div class="column is-7-mobile is-7-touch is-8-desktop is-justified btn-div">
        <!-- include div for buttons for music (blue), movies (pink), and games (green) all in contrial one text font 11 -->
        <a
        href="/music"
          class="button is-contrail has-text-white has-text-centered has-bg-blue is-justified nav-btn"
        >
          music
        </a>
        {{!-- <span class="tab"></span>
        <span class="tab"></span> --}}
        <a
        href="/movies"
          class="button is-contrail has-text-white has-text-centered has-bg-pink is-justified nav-btn"
        >
          movies
        </a>
        {{!-- <span class="tab"></span>
        <span class="tab"></span> --}}
        <a
        href="/games"
          class="button is-contrail has-text-white has-text-centered has-bg-green is-justified nav-btn"
        >
          games
        </a>
      </div>

      <div class="navbar-item column">
        <!-- include div for text "Explore your favorite media, today." in dark grey or black, Contrail one font, font size 10 next to log in and sign up links (underlined and blue) -->
        <p
          class="is-contrail is-size-6 has-text-grey-dark is-hidden-touch has-text-center m-0">
          Explore your favorite media, today.
        </p>
        <span class="tab"></span>
        {{#if loggedIn}}
          {{#if dashboard}}
          <button class="button dashboard-post-btn  is-contrail nav-btns is-flex-mobile" id="logout"> LOG OUT </button>
          {{else}}
          <a href="/dashboard" class="button dashboard-post-btn  is-contrail nav-btns is-flex-mobile">DASHBOARD </a>
          <span class="tab"></span>
          <button class="button dashboard-post-btn  is-contrail nav-btns is-flex-mobile" id="logout"> LOG OUT </button>
          {{/if}}
        {{else}}
        <button class="button dashboard-post-btn  is-contrail js-modal-trigger-login nav-btns" data-target="create-post-modal-login"> LOG IN &#160 or &#160 SIGN UP </button>
        {{/if}}
      </div>
    </nav>


  {{{body}}}


    {{! add footer }}
    <footer class="footer has-background-white columns py-3">
      <!-- include div with github logo that links to the project repository with an a tag -->
      <div class="column is-1">
        <a href="https://github.com/ArchieDonaho/InsertDisc">
          <img
            class="image is-64x64"
            src="/assets/images/github-icon-transparent.png"
            alt="logo for GitHub, which is a cat silhouette in white, with a black background"
          />
        </a>
      </div>
      <!-- include p tag with text "Ready to explore?" in contrail one black or dark grey and another link to log in and sign up also contrail one, underlined, and blue -->
      <div class="column">
        <p class="is-contrail has-text-grey-dark is-xsmall">
          Want to explore even more? Find more projects by the creators of &#160
          <span class="has-text-blue has-text-weight-bold"> Insert Disc </span>
          &#160 here:
          <span class="tab"></span>
        </p>
        <div class="column pl-0">
          <a
            href="https://github.com/ArchieDonaho"
            target="_blank"
            class="has-text-blue is-titillium-reg not-underlined is-xsmall is-inline"
          > Archie Donaho </a>

          <span class="tab"></span>
          <p class="is-titillium-reg is-xsmall is-inline">|</p>
          <span class="tab"></span>

          <a
            href="https://github.com/allygarcia152"
            target="_blank"
            class="has-text-blue is-titillium-reg not-underlined is-xsmall is-inline"
          >Ally Garcia</a>

          <span class="tab"></span>
          <p class="is-titillium-reg is-xsmall is-inline">|</p>
          <span class="tab"></span>

          <a
            href="https://github.com/John-Pena"
            target="_blank"
            class="has-text-blue is-titillium-reg not-underlined is-xsmall is-inline"
          >John Pe&#241a</a>
        </div>
      </div>

    </footer>

  <!-- modal -->
    <div class="modal" id="sign-in-modal">
      <div class="modal-background">
        <div class="modal-card sign-in-modal-card">
          <header class="modal-card-head is-contrail is-small has-bg-lp">
            <p class="modal-card-title has-text-white">
              Log in or sign up today!
            </p>
          </header>
          <div class="modal-card-body">

            <form id="login-form" id="login-form">
              <div>
                <p class="is-contrail is-small">
                  Already have an accout? Sign in here:
                </p>
              </div>
              <div>
                <label for="title is-titillium-reg">Email</label>
                <br>
                <input type="email" id="login-email" name="title" class="post-columns"/>
              </div>
              
              <div>
                <label for="content is-titillium-reg">Password</label>
                <br>
                <input type="password" class="post-columns" id="login-password" name="content"/>
              </div>
              <br>
              <button type="submit" class="button is-contrail is-responsive has-text-white get-started has-bg-purple">Log In</button>
            </form>


            <br>


            <form id="signup-form">
              <div>
                <p class="is-contrail is-small">
                  Don't have an accout? Sign up here:
                </p>
              </div>
              <div>
                <label for="title is-titillium-reg">Add Your Email</label>
                <br>
                <input type="email" id="signup-email" name="title" class="post-columns"/>
              </div>
              
              <div>
                <label for="title is-titillium-reg">Create a Username</label>
                <br>
                <input type="text" id="signup-username" name="title" class="post-columns"/>
              </div>
             
              <div>
                <label for="content is-titillium-reg">Create a Password</label>
                <p class="is-size-7 is-titillium-reg">*Password must be at least 8 characters long.</p>
                <input type="password" class="post-columns" id="signup-password" name="content"/>
              </div>
              <br>
              <button type="submit" class="button has-bg-purple is-contrail is-responsive has-text-white get-started">Sign Up</button>
            </form>


        </div>
        </div>
      </div>
    </div>

{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
{{else}}
<script src="/javascript/login.js"></script>
{{/if}}
  
  </body>

</html>