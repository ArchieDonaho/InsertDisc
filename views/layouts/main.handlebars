    {{!-- add if for title of page ex: Instert Disc - Dashboard --}}
    <title>Insert Disc</title>
  </head>

  <body>
    {{! add header }}
    <nav
      class="navbar 
      {{#if dashboard }} has-bg-lp {{/if}} 
      {{#if music}} has-bg-lb {{/if}} 
      {{#if movies}} has-bg-lpk {{/if}}
      {{#if games}} has-bg-lg {{/if}}
      has-columns"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand column is-1 pl-0">
        <!-- include div with company name in Titillium Web Bold, font 15 dark grey and ptag with "music, movies, games" in contrailone, blue, font 8 that has an a tag -->
        <a
          href="/"
          class="navbar-item p-0 column not-underlined has-text-right"
        >
          <h1 class="is-titillium-bold is-size-4 not-underlined has-text-grey-dark">
            Insert Disc
          </h1>
          <p class="is-contrail has-text-blue is-size-7">
            music, movies, games
          </p>
        </a>
      </div>
      

      <div>
        <img
          class="logo pt-3"
          src="/assets/images/InsertDiskLogo.png"
          alt="A picture of the Insert Disc logo: a disc that is half visible as it enters into an unseen reader"
        />
      </div>
      <div class="navbar-menu column is-justified pl-6">
        <!-- include div for buttons for music (blue), movies (pink), and games (green) all in contrial one text font 11 -->
        <a
          href="/music"
          class="button is-contrail has-text-white has-text-centered is-size-5 has-bg-blue is-justified"
        >
          music
        </a>
        <span class="tab"></span>
        <span class="tab"></span>
        <a
          href="/movies"
          class="button is-contrail has-text-white has-text-centered is-size-5 has-bg-pink is-justified"
        >
          movies
        </a>
        <span class="tab"></span>
        <span class="tab"></span>
        <a
          href="/games"
          class="button is-contrail has-text-white has-text-centered is-size-5 has-bg-green is-justified"
        >
          games
        </a>
      </div>

      <div class="navbar-item column is-flex is-right">
        <!-- include div for text "Explore your favorite media, today." in dark grey or black, Contrail one font, font size 10 next to log in and sign up links (underlined and blue) -->
        <p
          class="is-contrail is-size-6 has-text-grey-dark"
          style="margin-left: 50%"
        >
          <a href="/" class="has-text-blue is-underlined"> log in </a>

          <span class="tab"></span>
          <a href="/" class="has-text-blue is-underlined">sign up</a>
        </p>
      </div>
    </nav>


  {{{body}}}


    {{! add footer }}
    <footer class="footer has-background-white columns">
      <!-- include div with github logo that links to the project repository with an a tag -->
      <div class="column is-1">
