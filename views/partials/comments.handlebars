<article class='post games-post column has-background-white m-3'>
  <div>
    <p class='has-text-grey is-titillium-reg is-size-7'>
      <span class='material-symbols-rounded has-text-grey is-size-6'>
        straight
      </span>
      comment on
      {{user.username}}</p>
  </div>

  <div class='post-title'>
    <a href='/' target='_blank'>
      <p class='is-inline is-titillium-reg has-text-grey is-xsmall'>
        @{{user.username}}
        {{format_date created_at}}
      </p>
    </a>
    <span></span>
  </div>

  <div class='post-content'>
    <p class='is-titillium-reg is-xsmall has-text-black'>
      {{content}}
    </p>
  </div>
</article>